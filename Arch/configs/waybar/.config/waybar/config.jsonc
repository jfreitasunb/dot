{
    "position": "top",
    "layer": "top",
    "height": 34,

    "modules-left": ["custom/launcher"],
    "modules-center": ["clock"],
    "modules-right": ["custom/wallchange","temperature","disk","memory","cpu","network","custom/pacmanAlt","pulseaudio","custom/wlogout"],

    "custom/launcher": {
            "format": "Ôåü",
            "on-click": "nemo",
            "tooltip": "Nemo"
        },
       "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 24,
    "icon-theme": "Nordzy-cyan-dark",
    "tooltip-format": "{title}",
    "active-first": "false",
    "on-click": "activate",
    "on-click-middle": "close",
    "on-click-right": "minimize",   
    "ignore-list": ["thunar","Cavalier","Tilix","Character Map", "Settings","GNOME Tweaks", "Terminal","Calculator","conky (arch1)","blackbox"],
},
"clock": {
        "interval": 1,    
        "format": "ÔóØ {:%d %B ÔÄó %H:%M:%S}",
        "format-alt": "ÔÄó {:%H:%M}",
        "on-click-middle": "gnome-calendar",
        "tooltip-format": "\n<span size='14pt' font='JetBrains Mono ExtraBold'>{calendar}</span>",
        "calendar": {
                    "mode"          : "month",
                    "mode-mon-col"  : 3,
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#5e81ac'><b>{}</b></span>",
                              "days":       "<span color='#88c0d0'><b>{}</b></span>",
                              "weekdays":   "<span color='#d08770'><b>{}</b></span>",
                              "today":      "<span color='#bf616a'><b><u>{}</u></b></span>"
                              }
                    }
    },

    
    "pulseaudio": {
        "format": "<span size='12000'>{icon}</span> {volume}%",
        "format-muted": "<span size='12000' foreground='#ff7eb6'>ÔÄ¶</span> {volume}%",
  "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôäî",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄß", "ÔÄ®"],
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol",
    },

    "tray": {
        "icon-size": 16,
        "spacing": 8,
    },

    "memory": {
        "format": "Ôãõ {}%",
        "format-alt": "Ôãõ {used}/{total} GiB",
        "interval": 5,
    },
    "cpu": {
        "format": "Û∞çõ {usage}%",
        "format-alt": "Û∞çõ {avg_frequency} GHz",
        "interval": 5,
    },
    "disk": {
        "format": "Û∞ãä {}%",
        "format-alt": "Û∞ãä {used}/{total} GiB",
        "interval": 20,
        "path": "/"
    },
    "custom/pacmanAlt": {
            "format": "Ôûü {}",
            "interval": 3600,
            "exec": "checkupdates | wc -l",
            "tooltip": false        
        },

 "temperature": {
    //"hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    //"hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input",
  "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon",
  "input-filename": "temp1_input",  
      "critical-threshold": 80,
      "interval": 2,
      "format": "{icon} {temperatureC}¬∞C",
      //"format": "{temperatureC}¬∞C",
      "format-icons": [
          "Ôãã", // Icon: temperature-empty
          "Ôãä", // Icon: temperature-quarter
          "Ôãâ", // Icon: temperature-half
          "Ôãà", // Icon: temperature-three-quarters
          "Ôãà"  // Icon: temperature-full
      ],
      "tooltip": true
    },

"network": {
        "format-ethernet": "Ôõø Net",
        "format-linked": "{ifname} (No IP) Ôõø ",
        "format-disconnected": "Disconnected ‚ö† ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },

"wlr/workspaces": {
  "format": "{icon}",
  "on-click": "activate",
  "format-icons": {
    "1": "ÔÑ†",
    "2": "Ôâ®",
    "3": "ÔÑ°",
    "4": "ÔÜº",
    "5": "ÔÅµ",
    "urgent": "ÔÅ™",
    "active": "ÔÜí",
    "default": "ÔÑë"
  },
  "sort-by-number": true
},
          "custom/wlogout": {
        "format": " ÔÄë {}",
        "on-click": "wlogout -p xdg -b 2 -T 300 -B 300 -R 800 -L 800",
        "tooltip": false
    },
    
    "custom/wallchange": {
        "format": "Óíñ Wall",
        "exec": "echo ; echo Óíñ switch wallpaper",
        "on-click": "~/.bin/setwallpaper.sh",
        //"on-click-right": "~/.bin/kill_wallpaper_loop.sh",
        //"on-click-middle":"~/.bin/wallpaper_set.sh",
        "interval" : 3600, // once every day
        "tooltip": true
    },
    "hyprland/window": {
    "format": "{app_id}",
    "max-length": 50,
    "rewrite": {
       "(.*) - Mozilla Firefox": "üåé $1",
       "(.*) - vim": "ÓüÖ $1",
       "(.*) - zsh": "ÔÑ† [$1]"
    }
}

}
