        "sort-by-number": true,
        //No Arch mudar para "persistent-workspaces"
        "persistent_workspaces": {
            "1": ["eDP-1"],
            "2": ["eDP-1"],
            "3": ["eDP-1"],
            "4": ["eDP-1"],
            "5": ["eDP-1"],
            "6": ["eDP-1"],
